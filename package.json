{
  "name": "pedant",
  "displayName": "Pedant",
  "description": "A Positron extension to make function R function calls explicit",
  "version": "0.0.4",
  "icon": "man/figures/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/wurli/pedant"
  },
  "homepage": "https://github.com/wurli/pedant",
  "bugs": {
    "url": "https://github.com/wurli/pedant/issues"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pedant.makeRFunctionCallExplicit",
        "title": "Pedant: Make R Function Call Explicit"
      },
      {
        "command": "pedant.installPedant",
        "title": "Pedant: Install Dependencies"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && config.pedant.showContextMenu",
          "command": "pedant.makeRFunctionCallExplicit"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Pedant Configuration",
      "properties": {
        "pedant.showContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show the 'Make R Function Call Explicit' command in the editor context menu"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}